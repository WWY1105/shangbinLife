/**app.wxss**/
.container {
color: #333;
} 
view,text{
  line-height: 1;
}
.flexSpace{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flexCenter{
  display: flex;
  align-items: center;
  justify-content: center;
}
.flexStart{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.bottomBtn{
  width: 100%;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 999;
  background: url(https://life.sharejoy.cn/images/bottomBtnBg.png) 0 0 no-repeat;
  background-size: 100% 100% ;
  height: 98rpx;
  line-height: 98rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}