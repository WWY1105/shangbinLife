.container {
    padding: 0 ;
    display: flex;
    padding-bottom: 30rpx;
    flex-direction: column;
    height: 100%;
    /* overflow-x: hidden; */
}
.search {
  padding : 20rpx 15rpx;
  width: 100%;
  height: 60rpx;
   background-color: rgba(153, 153, 153, 0.2);
}

.searchinp {
  width: 72%;
  height: 60rpx;
  border-radius: 30rpx;
  float: left;
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding-left: 15rpx;
  font-size: 30rpx;
  border: 1px solid #ccc;
  background-color: #fff;
}
.brandlist {
  width: 100%;
  margin-left: 50rpx;
  margin-top: 30rpx;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: left;
  display: block;
  float: left;
}
.brand {
  width: 100%;
  padding-top: 40rpx;
  font-family: PingFangSC;
  font-size: 35rpx;
  font-weight: 500;
  border-bottom: 1px solid #d8d8d8;
}

.logos {
  width: 64rpx;
  height: 64rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  margin-right: 15rpx;
  margin-bottom: 8rpx;
  vertical-align: middle;
}

.more {
  font-family: PingFangSC;
  font-size: 30rpx;
  color: #c5473d;
  float: right;
  margin-right: 30rpx;
  margin-top: 16rpx;
}

.activity {
  width: 100%;
  height: 330rpx;
  display: flex;
  padding-top: 25rpx;
}
.activites {
  margin-left: 30rpx;
  margin-right: 10rpx;
  float: left;
  height: 330rpx;
}

.actimg {
  width: 245rpx;
  height: 201rpx;
  border-radius: 10rpx;
  display: block;
}

.actname {
  font-size: 32rpx;
  margin-top: 15rpx;
  letter-spacing: 0.3px;
  display: block;
  color: #333333;
}

.acttime {
  font-family: PingFangSC;
  font-size: 20rpx;
  color: #999999;
}
.loading {
  padding: 30rpx 10rpx 0rpx 10rpx ;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}