.container {
  padding: 0 ;
  display: flex;
  padding-bottom: 30rpx;
  flex-direction: column;
  height: 100%;
  overflow-x: hidden;
  background-color: #fff;
    
}
.search {
  padding : 20rpx 15rpx;
  width: 100%;
  height: 60rpx;
}

.searchinp {
  position: relative;
  width: 78%;
  height: 70rpx;
  border-radius: 50rpx;
  float: left;
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding-left: 25rpx;
  font-size: 30rpx;
  background-color: #efefef;
}
.searchbth {
  font-size: 34rpx;
  line-height: 70rpx;
  color: #FA6450;
}
.brand {
  width: 100%;
  padding-top: 40rpx;
  font-family: PingFangSC;
  font-size: 35rpx;
  font-weight: 500;
}

.logos {
  width: 64rpx;
  height: 64rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  margin-right: 15rpx;
  margin-bottom: 8rpx;
  vertical-align: middle;
}


.activity {
  width: 100%;
  /* height: 330rpx; */
  display: flex;
  padding-top: 25rpx;
}
.activites {
  margin-left: 30rpx;
  margin-right: 10rpx;
  margin-bottom: 50rpx;
  float: left;
  
  /* height: 330rpx; */
}
.item{
  box-shadow: 0rpx 70rpx 60rpx -60rpx rgba(153, 153, 153, 0.2);

}

.actimg {
  width: 520rpx;
  height: 300rpx;
  display: block;
  background-color: #fff;
  border-radius: 15rpx;
}
.nothing {
  width: 697rpx;
  height:275rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.actname {
  font-size: 40rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  /* font-weight: 500; */
  font-weight: bold;
  margin-left: 25rpx;
  letter-spacing: 0.3px;
  display: block;
  color: #333333;
}

.acttime {
  width: 100%;
  margin-bottom: 30rpx;
  display: block;
  margin-left: 25rpx;
  font-family: PingFangSC;
  font-size: 28rpx;
  color: #999999;
  /* background-color: #fff; */
}
.loading {
  padding: 30rpx 10rpx 0rpx 10rpx ;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}