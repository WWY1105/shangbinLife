.container {
    padding: 0 ;
    display: flex;
    padding-bottom: 30rpx;
    flex-direction: column;
}

.tips {
  width: 228rpx;
  /* height: 80rpx; */
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: 0.2px;
  text-align: center;
  color: #000000;
}
.old {
    width: 500rpx;
}
.old .oldphone {
  width: 100%;
  height: 60rpx;
  padding-top: 54rpx;
  border-bottom: 1px solid #d8d8d8;
  color: #d8d8d8;
  padding-left: 20rpx;
  position: relative;
  overflow: hidden;
}
.old .oldphone .oldnum {
  position: absolute;
  left: 100rpx;
  bottom: 10rpx;
  color: #000;

}
.old .code {
  padding-left: 20rpx;
  padding-top: 54rpx;
  width: 260rpx;
  height: 60rpx;
  border-bottom: 1px solid #d8d8d8;
  display: inline-block;
}
.getcode {
  display: inline-block;
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  letter-spacing: 0.2px;
  text-align: center;
  color: #ffffff;
  border-radius: 42rpx;
  background-color: #fa6450;
  margin-left: 20rpx;
  
}
.check {
  margin-top: 60rpx;
  width: 400rpx;
  height: 84rpx;
  border-radius: 42rpx;
  background-color: #fa6450;
  color: #fff;
}