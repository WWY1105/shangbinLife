.container {
    padding: 0rpx 60rpx 60rpx 60rpx;
}

.gift {
    margin-top: 40rpx;
    width: 100%;  
    box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.2);
    background-color: #ffffff
}
.content {
  padding : 0 10rpx ;
}
.img {
  width: 100%;
  height: 360rpx;
  margin-bottom: 30rpx;
}
.title {
  letter-spacing: 0.3px;
  color: #333333;
  font-family: PingFangSC;  
  font-size: 40rpx;
  font-weight: bold;
  padding: 20rpx ;
}
.coupons {
  font-family: PingFangSC;
  margin : 30rpx 0rpx 20rpx 0rpx;
  font-size: 24rpx;
  letter-spacing: 0.2px;
  color: #999999;
  padding: 0 20rpx ;
  
}
.has {
  padding: 0 0 0 20rpx ;
  font-size: 24rpx;
  letter-spacing: 0.2px;
  color: #333333;
}
.num {
  color: #c5473d;
}

.sharebtn {
  width: 100%;
  font-family: PingFangSC;
  font-size: 36rpx;
  letter-spacing: 0.2px;
  color: #cccccc;
  height: 85rpx;
  position: relative;
  margin-top: 20rpx;
}

.remainder {
  float: left;
  background-color: #f2f2f2;
  width: 48.5%;
  height: 100%;
  line-height: 85rpx;
  color: #999999;
  /* text-align: center; */
  padding-left: 20rpx;
}

.sharebtn button {
  float: right;
  border: 0 ;
  border-radius: 0;
  background: #fa6450;
  color: #fff;
  width: 48%;
  height: 100%;
  font-size: 36rpx;
  text-align:right;

}
.sharebtn::after {
  content: "" ;
  position: absolute;
  border-left: 35rpx solid #f2f2f2;
  border-top: 44rpx solid #f2f2f2;
  border-bottom: 43rpx solid transparent;
  border-right: 35rpx solid transparent;
  left: 51.5%;
}
.tips {
  position: fixed;
  top: 0;
  left: 0;
   width: 100%;
  height: 100%;
}
.inviters {
  width: 100%;
  height: 100%;
  opacity: 0.7;
  background-color: #000000;
}
.Show {
  display: block;
}
.Hide {
  display: none ;
}
.Rectangle-7 {
  width: 750rpx;
  height: 664rpx;
  padding-bottom: 40rpx;
  top: 0%;
  left: 0;
  right : 0;
  margin:  150rpx auto;
}
.before {
  background-image: url(https://i.ishangbin.com/img/user/images/before.png);
  background-size: 100% 100%;
  position: absolute;
  height: 800rpx;
  top: -21%;  
}
.success {
  background-image: url(https://i.ishangbin.com/img/user/images/modal_bg.png);
  position: absolute;
  background-size: 100% 100%;
}
.titleText {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 0.3px;
  color: #000;
  position: absolute;
  bottom: 280rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.before .close {
  top: 200rpx;
}
.close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50rpx;
  right: 30rpx;
  background-image: url(https://i.ishangbin.com/img/user/images/close1.png);
  background-size: 100% 100%;
}

input {
  position: absolute;
  bottom: 130rpx;
  left: 0;
  right: 0;
  width: 400rpx;
  padding-left: 15rpx;
  height: 80rpx;
  margin: 0 auto ;
  border-radius: 5rpx;
  border: solid 2px #979797;
  background-color: #ffffff;
}
.tipstext{
  font-size: 24rpx;
  color: #000;
  width: 460rpx;
  position: absolute;
  bottom: 230rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
}
.successtext {
  bottom: 180rpx;
  font-size: 28rpx;
}
.check{
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  width: 260rpx;
  font-size: 32rpx;
  height: 66rpx;
  line-height:66rpx;
  border-radius: 50rpx;
  color: #fff;
  background-color: #c5473d;
}
.checkbtn {
  bottom: 50rpx;
}
.nothing {
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  margin: 0 auto;
  width: 697rpx;
  height: 275rpx;
}