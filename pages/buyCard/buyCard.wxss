/* pages/buyCard/buyCard.wxss */
page {
    padding-bottom:200rpx;
    background: #F5F5F5;
}

.cardBox {
    background-color: #CDCED7;
    padding: 24rpx 0;
    box-sizing: border-box;
    position: relative;
}

.bg {
    position: absolute;
    left: 0;
    top: 240rpx;
    width: 100%;
}

.bg image {
    width: 100%;
    height: 190rpx;
}

.cardContentBox {
    padding: 0 32rpx;
}

.cardContent {
    padding: 44rpx 38rpx;
    box-sizing: border-box;
    background-color: #333;
    background: url(https://life.sharejoy.cn/images/cardBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    border-radius: 20rpx;
    min-height: 365rpx;
}

.cardName {
    font-size: 40rpx;
    font-weight: bold;
    color: #EECA94;
    margin-bottom: 10rpx;
}

.cardDetail {
    align-items: flex-end;
}

.cardDetail .rule {
    font-size: 24rpx;
    font-weight: bold;
    color: #EEC993;
    word-break: keep-all;
}

.cardDetail .rule .rule1 {
    margin-bottom: 24rpx;
}

.cardDetail .discount {
    font-weight: bold;
    color: #EEC993;
    font-size: 24rpx;
    text-align: right;
}

.cardDetail .discount .discountTips {
    margin-top: 24rpx;
}

.cardDetail .discount .num {
    font-size: 74rpx;
}

.shopInfo {
    position: absolute;
    top: 290rpx;
    flex-direction: column;
    width: 100%;
    font-size: 32rpx;
    border-bottom: 24rpx solid #fff;
}

.shopInfo image {
    margin-bottom: 15rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.contentContainer {
    padding: 0 24rpx;
    margin-top: 40rpx;
}

.contentContainer .content {
    background: #fff;
}

.contentContainer .content .titleLine {
    width: 106rpx;
    height: 12rpx;
    padding: 37rpx 26rpx;
}

.rightBox .rightTitle {
    width: 230rpx;
    height: 30rpx;
}

.rightBox .rightsText {
    color: #B89B7B;
}

.rightsDetails {
    margin-top: 60rpx;
    padding: 0 24rpx;
    padding-bottom: 40px;
}

.rightsDetails .eachRights {
    flex-direction: column;
}

.rightsDetails .rightIcon {
    width: 88rpx;
    height: 88rpx;
    text-align: center;
    margin-bottom: 35rpx;
}

.rightsDetails .rightBigTips {
    font-size: 30rpx;
    color: #000000;
    margin-bottom: 22rpx;
}

.rightsDetails .rightsTips {
    font-size: 24rpx;
    color: #9E9FA8;
}

.selfCouponBox {
    background: #FFFFFF;
    box-shadow: 0px 6rpx 17rpx 0rpx rgba(169, 185, 200, 0.27);
    border-radius: 10rpx;
    padding: 0 24rpx;
    padding-bottom: 27rpx;
}

.selfCouponTitle {
    background: url(https://life.sharejoy.cn/images/slagonBg.png) 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 18rpx;
    padding-bottom: 14rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.selfCouponTitle .main {
    font-size: 30rpx;
    font-weight: bolder;
    color: #411E00;
    margin-bottom: 14rpx;
}

.selfCouponTitle .second {
    font-size: 24rpx;
    color: #856944;
}

.selfCouponContent .eachRule {
    padding: 28rpx 22rpx 26rpx;
    background: #F6F6F6;
    text-align: center;
    width: 30%;
}
.selfCouponContent .eachRule .mainTips{
    color: #333;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 14rpx;
}
.selfCouponContent .eachRule .acount{
font-size: 59rpx;
font-weight: 500;
color: #411E00;
margin-bottom: 18rpx;
text-overflow: ellipsis;
word-break: keep-all;
max-width: 100%;
overflow: hidden;
}
.selfCouponContent .eachRule .tips {
    font-size: 22rpx;
    font-weight: 300;
    color: #333333;
}
.shopDetailBox{
    padding:26rpx;
    box-sizing: border-box;
}
.innerText{
    margin: 26rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 26rpx;
    margin-top: 0;
}
.shopDetailBox .content{
    
}
.shopDetailBox .content .title{
    margin: 0 26rpx;
    background: #fff;
    padding-left: 26rpx;
    padding-top: 30rpx;
    color: #333;
    font-size: 30rpx;
    font-weight: bolder;
}
.bottomBtn .price{
    color: #EEC993;
    font-size: 32rpx;
    font-weight: bolder;
}
.bottomBtn .toBuy{
width: 290rpx;
text-align: center;
font-size: 34rpx;
font-weight: bolder;
color: #5A3E0E;
}