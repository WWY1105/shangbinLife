<!--pages/buyCard/buyCard.wxml-->
<view class="cardBox">
    <view class="cardContentBox">
        <view class="cardContent">
            <view class="cardName">{{data.card.name}}</view>
            <view class="cardDetail flexSpace">
                <view class="rule" wx:if="{{data.card.grows}}">
                    <view class="rule1">自用优惠券*{{data.card.grows[0].times}}+好友分享券*{{data.card.grows[1].times}}</view>
                    <view>你或好友持卡消费可降低折扣</view>
                </view>
                <view class="discount">
                    <view>当前<text class="num"> {{data.card.amount}}</text>折</view>
                    <view class="discountTips">（最低可降至x折）</view>
                </view>
            </view>
        </view>
    </view>
    <view class="bg">
        <image class="cardBg2" src="https://life.sharejoy.cn/images/cardBg2.png"></image>
    </view>
    <view class="shopInfo flexCenter">
        <image src="{{data.logo}}"></image>
        <view>{{data.name}}</view>
    </view>
</view>
<!-- 中间详情 -->
<view class="contentContainer">
    <view class="content">
        <!-- 权益 -->
        <view class="rightBox flexCenter">
            <image src="https://life.sharejoy.cn/images/titleLineLeft.png" class="titleLine titleLineLeft"></image>
            <image src="https://life.sharejoy.cn/images/rightTitle.png" class="rightTitle"></image>
            <image src="https://life.sharejoy.cn/images/titleBgRight.png" class="titleLine titleLineLeft"></image>
        </view>
        <!-- 权益icon说明 -->
        <view class="rightsDetails flexSpace">
            <view class="eachRights flexCenter">
                <image class="rightIcon" src="https://life.sharejoy.cn/images/selfCouponIcon.png"></image>
                <view class="rightBigTips">自用优惠券</view>
                <view class="rightsTips">专享超值优惠</view>
            </view>
            <view class="eachRights flexCenter">
                <image class="rightIcon" src="https://life.sharejoy.cn/images/selfCouponIcon.png"></image>
                <view class="rightBigTips">自用优惠券</view>
                <view class="rightsTips">专享超值优惠</view>
            </view>
            <view class="eachRights flexCenter">
                <image class="rightIcon" src="https://life.sharejoy.cn/images/selfCouponIcon.png"></image>
                <view class="rightBigTips">自用优惠券</view>
                <view class="rightsTips">专享超值优惠</view>
            </view>
        </view>
        <!-- 自用优惠券 -->
        <view class="selfCouponBox">
            <view class="selfCouponTitle">
                <view class="main">自用优惠券</view>
                <view class="second">每次使用后卡折扣即可降低</view>
            </view>
            <!-- 分销内容 -->
            <view class="selfCouponContent flexSpace">
                <view class="eachRule" wx:for="{{data.participants}}">
                    <view class="mainTips">好友分享券A</view>
                    <view class="acount">
                        <!-- <image class="yuanImg" src="https://life.sharejoy.cn/images/yuan.png"></image> -->
                        <text>{{item.name}}</text>
                    </view>
                    <view class="tips">满100可使用</view>
                </view>
            </view>
        </view>
    </view>
</view>

<!-- 商家详情 -->
<div class="shopDetailBox">
    <view class="content">
        <view class="title">商家详情</view>
        <view class="innerText" >
            <rich-text nodes="{{instructions}}" ></rich-text>
        </view>
    </view>
</div>
<!-- 底部按钮 -->
<view class="bottomBtn flexSpace">
    <view class="price">￥{{data.price}}</view>
    <view class="toBuy">去购买</view>
</view>