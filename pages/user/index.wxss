/* pages/user/index.wxss */
page {
    padding: 0 24rpx;
    padding-top: 96rpx;
    box-sizing: border-box;
    background: #F5F5F5;
}

.userBox {
    width: 100%;
    height: 234rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    position: relative;
    text-align: center;
    flex-direction: column;
}

.userBox .userImg {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    top: -65rpx;
    left: 50%;
    margin-left: -65rpx;
    position: absolute;
}

.userBox .userName {
    font-size: 32rpx;
    font-weight: bolder;
    color: #3E3E3E;
    padding-top: 100rpx;
    padding-bottom: 25rpx;
}

.userBox .userPhone {
    color: #999;
    font-size: 28rpx;
}
.toBindPhone{
    border: 1rpx solid #999;
    border-radius: 10rpx;
    padding:0 4rpx ;
}
.navBox{
    background-color: #fff;
    border-radius: 10rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}
.navBox .navIcon,.cardIcon{
width: 40rpx;
height: 30rpx;
}
.navBox .eachList{
    padding: 35rpx 0;
}
.navBox .eachList:nth-child(1){
    border-bottom: 1rpx solid #F5F5F5;
}
.shareCard{
    background-color: #fff;
    border-radius: 10rpx;
    padding: 15rpx 24rpx;
}
.shareCard .title{
    font-size: 30rpx;
    color: #333333;
    border-bottom: 1rpx solid #F5F5F5;
    padding-bottom: 23rpx;
}
.shareCard .contentBox{
    color: #333;
    font-size: 24rpx;
    margin-bottom: 30rxp;
}
.shareCard .shopName{
    margin-bottom: 30rpx;
}
.shareCard .contentBox .cardContent{
background: linear-gradient(88deg, #525263, #282933);
border-radius: 10rpx 10rpx 0rpx 0rpx;
padding: 24rpx 30rpx;
box-sizing: border-box;

color: #EEC993;
}
.shareCard .contentBox .cardContent .cardName{
    font-weight: bold;
    margin-bottom: 20rpx;
}
.shareCard .contentBox .cardContent .cardDesc{
    align-items: flex-end;
}
.shareCard .contentBox .cardContent .num{
font-size: 48rpx;
font-weight: bolder;
}