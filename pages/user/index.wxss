.container {
    padding: 0 ;
    display: flex;
    padding-bottom: 30rpx;
    flex-direction: column;
}
.title {
  height: 120rpx;
  width: 686rpx;
  background: #fa6450;
  padding: 40rpx 32rpx;
  font-size: 32rpx;
  letter-spacing: 0.3px;
  color: #ffffff;
}
.title .userlogo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  vertical-align: top;
}
.title .userinfo {
  display: inline-block;
}
.userinfo .phone {
  margin-top: 20rpx;
  
}
.userinfo .update {
  margin-top: 20rpx;
  display: inline-block;
  margin-left: 20rpx;
  border-bottom: 1px solid #fff;
}
.brand .items {
  width: 686rpx;
  height: 274rpx;
  border-bottom: 20rpx solid #f0f0f0;
  padding: 40rpx 32rpx;
}
.brand .items .brandlogo {
  width: 121rpx;
  height: 120rpx;
  border-radius: 10rpx;
  vertical-align: middle;
  margin-right: 38rpx;
}
.brand .items .brandname {
  display: inline-block;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 0.3px;
  color: #000000;
}
.brand .items .detail {
  width: 100%;
  height: 132rpx;
  margin-top: 40rpx;
}
.detail .item {
  width: 25%;
  height: 100%;
  font-size: 24rpx;
  color: #000;
  display: inline-block;
  text-align: center;
}
.detail .item text {
  margin-top: 20rpx;
  font-size: 36rpx;
  display: block;
  color: #000;
  font-weight: bold;
} 
.loading {
  padding: 30rpx 10rpx 0rpx 10rpx ;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}
