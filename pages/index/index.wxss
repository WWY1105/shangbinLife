.container {
    position: relative;
}
.arrowDown{
    width: 20rpx;
    height: 12rpx;
    margin-left: 15rpx;
}
.container .bg {
    width: 1500rpx;
    height: 886rpx;
    background: linear-gradient(-75deg, #DFBE8B, #F5E1C6);
    border-radius: 50%;
    position: absolute;
    top: -600rpx;
    left: -375rpx;
    z-index: -1;
}

.searchBox {
    padding: 30rpx 24rpx;
    color: #333;
    font-size: 28rpx;
    width: 100%;
    box-sizing: border-box;
    font-weight: bolerd;
}

.searchBox .inputBox {
    margin-left: 24rpx;
    flex: 1;
    height: 64rpx;
    line-height: 64rpx;
    background: #EDEDF2;
    opacity: 0.3;
    border-radius: 32rpx;
}

.swiper {
    position: absolute;
    top: 100rpx;
    z-index: 999;
    height: 200rpx;
    border-radius: 10rpx;
    padding: 0 24rpx;
    width: 100%;
    box-sizing: border-box;
    top: 124rpx;
}

.swiper swiper {
    width: 100%;
    background-color: pink;
    border-radius: 10rpx;
    height: 200rpx;
}
.recommandBox{
    padding: 0 24rpx;
    padding-top: 230rpx;
    box-sizing: border-box;
    width: 100%;
}
.recommandBox .title{
    font-size: 30rpx;
    font-weight: bolder;
    color: #333333;
    margin-bottom: 10rpx;
}
.recommandBox  .listBox .eachShop{
    padding: 20rpx 0;
    align-items: flex-start;
}
.recommandBox  .listBox .eachShop .shopImg{
    width: 120rpx;
    height: 120rpx;
    border-radius: 6rpx;
    background-color:#ccc;
    margin-right: 20rpx;
}
.recommandBox  .listBox .eachShop .descBox{
    flex: 1;
    border-bottom: 1rpx solid #ECECEC;
    height: 120rpx;
    padding-bottom:38rpx;
}
.recommandBox  .listBox .eachShop .descBox .shopName{
font-size: 30rpx;
font-weight: bolder;
color: #333333;
margin-bottom: 40rpx;
}
.recommandBox  .listBox .eachShop .descBox  .otherDesc{
    font-size: 22rpx;
    color: #333333;
    opacity: 0.6;
}
